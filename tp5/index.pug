extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de uma Tarefa
            .w3-container
                form.w3-container(action='/' method='POST')
                    label
                        b Nome da Tarefa
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Data Limite
                    input.w3-input.w3-border.w3-light-grey(type='text' name='dataLim')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')

            .w3-card-4
                table.w3-table-all
                    tr
                        th Nome da tarefa
                        th Data limite
                    each a in lista
                        tr
                            td= a.nome
                            td= a.dataLim
                            td
                                button.w3-button.w3-circle.w3-blue-grey(onclick="apagaItem('" + a.nome + "')") Apagar
            footer.w3-container.w3-teal
            address Gerado por lista de tarefas 