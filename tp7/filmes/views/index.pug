extends layout
block content
  .w3-container
  .w3-card-4
    h1.w3-container.w3-brown-light Gestão de Filmes
    .w3-card-4
      .w3-card-4
        header.w3-container.w3-brown
          h2.w3-container.w3-brown-light Adicionar Um Novo Filme
              form.w3-container(action='/filmes' method='POST')
                  label.w3-brown
                    b Title
                  input.w3-input.w3-border.w3-white(type='text' name='title')
                  label.w3-brown
                    b Year
                  input.w3-input.w3-border.w3-white(type='text' name='year')
                  label.w3-brown
                    b Cast
                  input.w3-input.w3-border.w3-white(type='text' name='cast')
                  label.w3-brown
                    b Genres
                  input.w3-input.w3-border.w3-white(type='text' name='genres')
                  input.w3-btn.w3-blue(type='submit' value='Enviar')
        .w3-card-4
            table.w3-table
                tr
                    th Title
                    th Year
                    th Operações
                each i in lista
                    tr
                        td= i.title
                        td= i.year
                        td
                            button.w3-button.w3-blue(onclick="location.href='http://localhost:3002/filmes/" + i._id + "'") Editar
                            button.w3-button.w3-red(onclick="apagaItem('" + i._id + "')") Apagar
            footer.w3-container.w3-brown
                address Gerado por Daniel Faria