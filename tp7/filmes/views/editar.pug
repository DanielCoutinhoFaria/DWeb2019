extends layout
block content
    .w3-container.w3-brown-light
      h1 Gestão de Filmes
      .w3-card-4
        .w3-card-4
        header.w3-container.w3-brown
          h2 Editar Filme
            .w3-container
              form.w3-container(action='/filmes/editar/' method='post')
                  label.w3-brown
                    b Title
                  input.w3-input.w3-border.w3-white(type='text' name='title' value=filme.title required)
                  label.w3-brown
                    b Year
                  input.w3-input.w3-border.w3-white(type='text' name='year' value=filme.year required)
                  label.w3-brown
                    b Cast
                  input.w3-input.w3-border.w3-white(type='text' name='cast' value=filme.cast)
                  label.w3-brown
                    b Genres
                  input.w3-input.w3-border.w3-white(type='text' name='genres' value=filme.genres)
                  input.w3-btn.w3-blue(type='submit' value='Enviar')
            footer.w3-container.w3-brown
                address Gerado por Daniel Faria
                    br
                    a(href="http://localhost:3002/filmes") Voltar à página inicial